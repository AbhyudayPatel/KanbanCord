{
  "Serilog": {
    "MinimumLevel": "Information",
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Exceptions"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/kanbancord-log.txt",
          "fileSizeLimitBytes": 5000000,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "WithExceptionDetails"
    ]
  },
  "Database": {
    "Name": "KanbanCord"
  }
}